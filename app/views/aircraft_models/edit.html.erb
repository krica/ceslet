<h1><%= t('Editing aircraft model') %></h1>

<% form_for(@aircraft_model) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t('Name') %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
  <%= f.label t('Type') %><br />
    <%= f.select(:aircraft_type_id, AircraftType.all.map {|t| [t.name, t.id]}) %>
  </p>  

  <p>
    <%= f.label t('Tcds') %><br />
    <%= f.text_field :tcds %>
  </p>
  <p>
    <%= f.label t('Supplementary_indications') %><br />
    <%= f.text_field :supplementary_indications %>
  </p>
  <p>
    <%= f.label t('Mtow kg') %><br />
    <%= f.text_field :mtow_kg %>
  </p>
  <p>
    <%= f.label t('Speed vno') %><br />
    <%= f.text_field :speed_vno %>
  </p>
  <p>
    <%= f.label t('Speed vne') %><br />
    <%= f.text_field :speed_vne %>
  </p>
  <p>
    <%= f.label t('Speed vmin') %><br />
    <%= f.text_field :speed_vmin %>
  </p>
  <p>
    <%= f.label t('Original regulation basis') %><br />
    <%= f.text_field :original_regulation_basis %>
  </p>
  <p>
    <%= f.label t('Number of passengers') %><br />
    <%= f.text_field :number_of_passengers %>
  </p>
  <p>
    <%= f.label t('Number of engines') %><br />
    <%= f.text_field :number_of_engines %>
  </p>
  <p>
    <%= f.label t('Engine type') %><br />
    <%= f.text_field :engine_type %>
  </p>
  <p>
  <%= f.submit t('Update'), :class => "to-btn fg-button" %>
  </p>
<% end %>

<%= back_link(aircraft_models_path) %>
<%= link_to t('Show'), @aircraft_model, :class => 'to-btn fg-button' %>
