<h1><%= t('Classifications') %></h1>

<table>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('Abbreviation') %></th>
    <th></th>
  </tr>

<% @classifications.each do |classification| %>
  <tr>
    <td><%=h classification.name %></td>
    <td><%=h classification.abbreviation %></td>
    <td>
      <%= link_to t('Show'), classification, :class => "fg-btn-small to-btn" %>
      <%= link_to t('Edit'), edit_classification_path(classification), :class => "fg-btn-small to-btn" %>
      <%= classification_destroy_link(classification) %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to_with_icon('plus',t('New classification') , new_classification_path, :class=>"fg-button  to-btn") %>
