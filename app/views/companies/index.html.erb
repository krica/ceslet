<h1><%= t('Companies') %></h1>
<% unless current_user.has_role?("observer") %>
  <p>
    <%= link_to_with_icon('plus',t('New company') , new_company_path, :class=>"fg-button  to-btn") %>
  </p>
<% end %>
<table>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('Ico') %></th>
    <th><%= t('Dic') %></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.ico %></td>
    <td><%=h company.dic %></td>
    <td>
      <%= link_to_with_icon('search',t('Show') , company, :class => "fg-btn-small to-btn") %>
      <% unless current_user.has_role?("observer") %>
        <%= link_to_with_icon('pencil',t('Edit') , edit_company_path(company), :class => "fg-btn-small to-btn") %>
        <%= company_destroy_link(company) %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
