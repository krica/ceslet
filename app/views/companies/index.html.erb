<h1><%= t('Companies') %></h1>

<table>
  <tr>
    <th><%= t('Name') %></th>
    <th><%= t('Ico') %></th>
    <th><%= t('Dic') %></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%=h company.name %></td>
    <td><%=h company.ico %></td>
    <td><%=h company.dic %></td>
    <td>
<%= link_to_with_icon('search',t('Show') , company, :class => "fg-btn-small to-btn") %>
<%= link_to_with_icon('pencil',t('Edit') , edit_company_path(company), :class => "fg-btn-small to-btn") %>
<%= link_to_with_icon('trash',t('Destroy') , company, :confirm => t('Are you sure'), :method => :delete, :class => "fg-btn-small to-btn") %>
    </td>
  </tr>
<% end %>
</table>

<br />
<p>
<%= link_to_with_icon('plus',t('New company') , new_company_path, :class=>"fg-button  to-btn") %>
</p>
