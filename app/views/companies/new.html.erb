<h1><%= t('New company') %></h1>

<% form_for(@company) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t('Name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label t('Ico') %><br />
    <%= f.text_field :ico %>
  </p>
  <p>
    <%= f.label t('Dic') %><br />
    <%= f.text_field :dic %>
  </p>
  <p> 
  <%= f.submit t('Create'), :class => "fg-button to-btn" %>
  <%= f.submit t('Create and continue'), :class => "fg-button to-btn", :name => "submit_continue" %>
  </p>
<% end %>

<%= back_link(companies_path) %>
