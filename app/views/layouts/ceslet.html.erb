<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <%= stylesheet_link_tag 'redmond/jquery-ui-1.8rc3.custom.css' %>
  <%= stylesheet_link_tag 'reset.css' %>
  <%= stylesheet_link_tag 'master.css' %>
<%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-1.4.2.min.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8rc3.custom.min.js' %>
  <%= javascript_include_tag 'application.js' %>
  <title>Ceslet-IS</title>
</head>
<body>
  <div class="center">
    <div id="content">
      <div id="head">
        <a href="/" class="logo"></a>
        <ul id="login-button">
          <% if current_user %>
          <li><span id="display-login"><b><%= current_user.display_name %></b> (<%= current_user.login %>)</span></li>
          <% end %>
          <li><%= login_button %></li>
        </ul>
        <% if session[:user_id] %>
          <ul id="top-menu">
            <li><%= link_to_with_icon('document',t('Offers'),{:controller => :offers, :action => :index}, :class => "to-btn fg-button") %></li>
            <li><%= link_to_with_icon('flag',t('Projects'),{:controller => :offers, :action => :index}, :class => "to-btn fg-button") %></li>
          </ul>
        <% end %>
      </div>
      <div id="wrapper" class="left">
        <% if flash[:notice] %>
          <div id='flash-notice' class="ui-state-highlight ui-corner-all">
            <p><%= flash[:notice]  %></p>
          </div>
        <% end %>
        <%= yield %>
      </div> 
      <br class="clear-all" />
    </div>
      <div id="footer">
    </div>
  </div>
</body>
</html>

