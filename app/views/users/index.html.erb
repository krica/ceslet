<h1><%= t('Admin users') %></h1>

<table>
  <tr>
    <th><%= t('User name') %></th>
    <th><%= t('Login') %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.display_name %></td>
    <td><%= user.login %></td>
    <td>
<%= link_to_with_icon('search',t('Show') , user, :class => "fg-btn-small to-btn") %>
<%= link_to_with_icon('pencil',t('Edit') , edit_user_path(user), :class => "fg-btn-small to-btn") %>
<%= link_to_with_icon('trash',t('Destroy') , user, :confirm => t('Are you sure'), :method => :delete, :class => "fg-btn-small to-btn") %>
    </td>
  </tr>
<% end %>
</table>

<br />
<p>
<%= link_to_with_icon('plus',t('Add user') ,{:action => :new}, :class=>"fg-button  to-btn") %>
<%= link_to_with_icon('wrench',t('Admin groups') ,{:controller => :groups, :action => :index}, :class=>"fg-button  to-btn") %>
</p>
