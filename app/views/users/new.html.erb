<h1><%= t('New user') %></h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
<div class="box right-box">
  <p>
    <%= label_tag t('Password') %>
    <br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= label_tag 'password_confirmation', t('Confirm Password') %>
    <br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= label_tag t('Role') %><br />
    <%= f.select(:role_id, Role.all.map {|r| [r.name, r.id]}) %> 
  </p>
</div>
<div class="box">
  <p>
    <%= label_tag t('Name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= label_tag t('Login') %>
    <br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= label_tag t('Email') %>
    <br />
    <%= f.text_field :email %>
  </p>
</div>
<br />
<p>
  <%= submit_tag t('Sign up'), :class => 'fg-button to-btn' %>
  <br />
  <br />
  <%= back_link('/') %>
</p>
<% end -%>
